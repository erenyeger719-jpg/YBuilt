# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_PATH=./data/ybuilt.db

# Authentication & Security
# ⚠️ REQUIRED: JWT_SECRET must be set for authentication to work
# Generate a secure secret with: openssl rand -base64 32
# Minimum recommended length: 32 characters
# DO NOT use the default value in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-secret-key-here

# Razorpay Configuration (optional - app runs in mock mode without these)
RAZORPAY_KEY_ID=rzp_test_your_key_here
RAZORPAY_KEY_SECRET=your_secret_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# OpenAI Configuration (for AI chat assistant)
OPENAI_API_KEY=sk-your-key-here

# Redis Configuration (optional - for production job queue)
# REDIS_URL=redis://localhost:6379

# Code Execution Security
# ⚠️ WARNING: vm2 is DEPRECATED and has critical security vulnerabilities!
# ⚠️ Do NOT use in production! Consider migrating to isolated-vm
# Only enable in development with trusted users
ENABLE_CODE_EXECUTION=false
CODE_EXECUTION_TIMEOUT=5000
CODE_EXECUTION_MAX_OUTPUT=10000
EXECUTION_TIMEOUT_MS=3000
MAX_CODE_OUTPUT=65536

# Database Configuration (for Backend Brain MVP)
DATABASE_FILE=./data/db.json

# Chat Configuration
CHAT_HISTORY_LIMIT=100
CHAT_MESSAGE_MAX_LENGTH=5000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
